---
const { class: className, inputClass, labelClass, label, ...props} = Astro.props;
const random = ((Math.random() * 100) + Date.now()).toFixed(0);
---
<div class={className}>
    { label && <label for={props.id || "input-"+random} class={labelClass || "block text-sm font-medium text-gray-700 mb-1"}>{label}</label>}
    <input {...props} type={ props.type || "text"} id={props.id || "input-"+random} class={inputClass || "w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 shadow-sm"} />
</div>