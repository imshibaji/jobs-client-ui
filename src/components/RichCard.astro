---
export interface CardProps {
    title?: string;
    subtitle?: string;
    icon?: any;
    className?: string;
    action?: {
        label?: string;
        url?: string;
        icon?: any;
        onClick?: () => void;
    }
    children?: any;
}
const { title, subtitle, icon, action, class: className } = Astro.props;
---
<div class={"bg-white rounded-2xl shadow-2xl p-6 sm:p-8 border-t-8 border-violet-600" + (className ? " " + className : "")}>
        <div class="flex items-start justify-between mb-6">
            <slot name="header">
                <slot name="header-title">
                    <div>
                        <h1 class="text-violet-700 text-3xl font-extrabold flex items-center gap-2">
                            { icon || <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-violet-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>}
                            { title || "Job Title" }
                        </h1>
                        <p class="text-gray-500 mt-1">{ subtitle || "" }</p>
                    </div>
                </slot>

                <slot name="header-actions">
                    { action?.onClick ? <button onclick={action.onClick} class="bg-gray-200 text-gray-700 px-5 py-2 rounded-xl text-sm font-semibold hover:bg-gray-300 transition duration-200 shadow-md">
                        {action?.icon || "←"} { action?.label || "Go Back" }
                    </button> : <a href={action?.url || "#"} class="bg-gray-200 text-gray-700 px-5 py-2 rounded-xl text-sm font-semibold hover:bg-gray-300 transition duration-200 shadow-md">
                        {action?.icon || "←"} { action?.label || "Go Back" }
                    </a> }
                </slot>
            </slot>
        </div>
        
        <hr class="border-gray-200 my-6" />
        <slot />
</div>