---
const { title, class: className } = Astro.props;
---
<div class={"bg-white shadow-lg rounded-2xl p-6 my-6 " + (className || "")}>
    <slot name="header">
        {title && (
            <div class="flex justify-between items-center mb-3">
                <h3 class="text-lg font-semibold text-purple-700">{title}</h3>
                <slot name="header-actions" />
            </div>
        )}
    </slot>
    <slot />
    <slot name="footer" />
</div>