---
const { class: className, inputClass, labelClass, label, ...props} = Astro.props;
const random = ((Math.random() * 100) + Date.now()).toFixed(0);
---
<div class={className}>
    { label && <label for={props.id || "select-"+random} class={labelClass || "block text-sm font-medium text-gray-700 mb-1"}>{label}</label>}
    <select {...props} id={props.id || "select-"+random} class={inputClass || "w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500 shadow-sm"}>
        <slot>
            { props.options && props.options.map((option: string | { value: string; label: string }) => <option value={typeof option === 'string' ? option : option.value}>{typeof option === 'string' ? option : option.label}</option>) }
        </slot>
    </select>
</div>