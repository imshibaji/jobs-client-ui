<div class="bg-white shadow-lg rounded-2xl p-8 sm:p-8">
    <h2 class="text-2xl sm:text-3xl font-semibold text-center mb-6">Profile Settings</h2>
    <div class="space-y-3 sm:space-y-4">
        {/* Divider */}
        <div class="flex items-center my-4 before:flex-1 before:border-t before:border-gray-300 after:flex-1 after:border-t after:border-gray-300">
            <p class="text-center font-semibold mx-4 mb-0">Login Details</p>
        </div>
        {/* Form Fields */}
        <div class="space-y-3 sm:space-y-4">
            <input type="text" placeholder="Full Name" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
            <div class="flex space-x-4">
                <input type="email" placeholder="Email" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
                <input type="text" placeholder="Phone Number" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
            </div>
            <div class="flex space-x-4">
                <input type="password" placeholder="Password" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
                <input type="password" placeholder="Confirm Password" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
            </div>
        </div>
        {/* Divider */}
        <div class="flex items-center my-4 before:flex-1 before:border-t before:border-gray-300 after:flex-1 after:border-t after:border-gray-300">
            <p class="text-center font-semibold mx-4 mb-0">Other Details</p>
        </div>
        <div class="space-y-3 sm:space-y-4">
            <textarea placeholder="Address" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
        </div>
        <div class="flex gap-4">
            <input type="text" placeholder="City" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
            <input type="text" placeholder="State" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
            <input type="text" placeholder="Country" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
        </div>
        <div class="space-y-3 sm:space-y-4">
            <input type="text" placeholder="Pincode" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
        </div>
        <div class="flex gap-4">
            <input type="text" placeholder="Date Of Birth" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500" required />
                <select class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-violet-500">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>
        </div>
        <button type="submit" class="w-full bg-violet-600 text-white py-2 rounded-lg hover:bg-violet-700 transition duration-200">
            Update Profile
        </button>
    </div>
</div>