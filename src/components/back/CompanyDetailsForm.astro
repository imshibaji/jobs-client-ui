<!-- Company Details -->
<div class="flex flex-col gap-4 w-full">
    <h3 class="text-left text-purple-700 font-headline text-2xl font-bold">Company Details</h3>
    <div class="flex flex-col sm:flex-row gap-2">
        <div class="flex flex-col gap-2 w-full sm:w-3/5">
            <label for="company">Company Name</label>
            <input type="text" placeholder="Company Name" id="company" name="company" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
        </div>
        <div class="flex flex-col gap-2 w-full sm:w-2/5">
            <label for="company">Industry Type</label>
            <input type="text" placeholder="Industry Type" id="industry" name="industry" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
        </div>
    </div>
    <div class="flex flex-col gap-2">
        <label for="description">Company Description</label>
        <textarea id="description" placeholder="Company Description" name="description" rows="4" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500"></textarea>
    </div>
    <div class="flex flex-col gap-2">
        <label for="website">Company Website</label>
        <input type="text" placeholder="Company Website" id="website" name="website" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="logo">Contact Person</label>
        <input type="text" placeholder="Contact Person" id="logo" name="logo" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="phone">Contact Number</label>
        <input type="text" placeholder="Contact Number" id="phone" name="phone" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="email">Contact Email</label>
        <input type="text" placeholder="Contact Email" id="email" name="email" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="address">Company Register Address</label>
        <input type="text" placeholder="Company Address" id="address" name="address" class="rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
        <div class="flex flex-row gap-2 mt-4">
            <input type="text" placeholder="City" id="city" name="city" class="w-1/3 rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
            <input type="text" placeholder="State" id="state" name="state" class="w-1/3 rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
            <input type="text" placeholder="Country" id="country" name="country" class="w-1/3 rounded-md border border-gray-300 px-4 py-2 focus:border-purple-500 focus:ring-purple-500" />
        </div>
    </div>
    <div class="flex flex-col gap-2 py-4">
      <button type="submit" class="bg-violet-600 text-white py-2 rounded-lg hover:bg-violet-700 transition duration-200">Save Details</button>
    </div>
</div>