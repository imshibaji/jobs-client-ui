<!-- Analytics & Insights Tab -->
<section id="analytics" class="tab-content scrollable-dashboard hidden-tab">
<h2 class="text-2xl font-semibold text-purple-800 mb-4">Analytics & Insights</h2>
<div class="grid md:grid-cols-3 gap-4">
    <div class="bg-white p-6 rounded-xl shadow">
    <h3 class="font-semibold text-purple-700 mb-2">Applications Over Time</h3>
    <canvas id="lineChart" class="h-60"></canvas>
    </div>
    <div class="bg-white p-6 rounded-xl shadow">
    <h3 class="font-semibold text-purple-700 mb-2">Interview Success Rate</h3>
    <div class="flex justify-center items-center h-60 w-full">
        <canvas id="pieChart" width="640"></canvas>
    </div>
    </div>
    <div class="bg-white p-6 rounded-xl shadow">
    <h3 class="font-semibold text-purple-700 mb-2">Skill Improvement Stats</h3>
    <canvas id="barChart" class="h-60"></canvas>
    </div>
</div>
</section>

<script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script is:inline>
document.querySelectorAll('.pie-fill').forEach(fill => {
    const percent = fill.getAttribute('data-percent');
    fill.style.transform = `rotate(${percent * 3.6}deg)`;
});

const lineCtx = document.getElementById('lineChart').getContext('2d');
new Chart(lineCtx, {
    type: 'line',
    data: { labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'], datasets: [{ label: 'Applications', data: [5, 10, 8, 15, 12], borderColor: '#7C3AED', backgroundColor: 'rgba(124,58,237,0.2)' }] },
    options: { responsive: true, plugins: { legend: { display: false } } }
});

const pieCtx = document.getElementById('pieChart').getContext('2d');
new Chart(pieCtx, {
    type: 'pie',
    data: { labels: ['Cleared', 'Pending', 'Rejected'], datasets: [{ data: [40, 35, 25], backgroundColor: ['#10B981', '#FBBF24', '#EF4444'] }] },
    options: { responsive: true }
});

const barCtx = document.getElementById('barChart').getContext('2d');
new Chart(barCtx, {
    type: 'bar',
    data: { labels: ['Digital Marketing', 'UX Design', 'Leadership'], datasets: [{ label: 'Skill Progress', data: [70, 50, 80], backgroundColor: '#7C3AED' }] },
    options: { responsive: true, plugins: { legend: { display: false } } }
});
</script>