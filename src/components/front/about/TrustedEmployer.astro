<style is:inline>
/* Animations on scroll - Kept original JS-dependent classes */
.fade-in{opacity:0; transform:translateY(14px); transition:all 0.7s ease-out;}
.show.fade-in{opacity:1; transform:translateY(0);}
.slide-up{opacity:0; transform:translateY(14px); transition:all 0.7s ease-out;}
.show.slide-up{opacity:1; transform:translateY(0);}
</style>

<script is:inline>
// Original Intersection Observer script for animations
const observer = new IntersectionObserver((entries)=>{
  entries.forEach(entry=>{
    if(entry.isIntersecting){
      entry.target.classList.add('show');
      observer.unobserve(entry.target);
    }
  });
},{threshold:0.15});
document.querySelectorAll('.fade-in, .slide-up').forEach(el=>{
  observer.observe(el);
});
</script>