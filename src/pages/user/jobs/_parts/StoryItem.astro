---
import { Story } from "@/utils/Story"
export interface Props {
    story: Story
}
const { story } = Astro.props
---
<div class="bg-purple-50 p-4 rounded-lg shadow hover:bg-purple-100 transition cursor-pointer">
    <h4 class="font-semibold text-purple-800">{story.title}</h4>
    <p class="text-gray-700 text-sm mt-1">{story.description}. <a href={story.link || "#"} class="text-purple-700 font-semibold">Read More...</a></p>
</div>