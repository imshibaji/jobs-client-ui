---
import NoDataFound from "@/components/NoDataFound.astro";
import JobItem from "./JobItem.astro";
import { getUserData } from "@/pages/user/_parts/UserData";
const {token, user} = Astro.locals as any;
const {jobs} = await getUserData(token, user);
console.log(jobs);

---

<!-- Job Alerts & Notifications -->
<section class="bg-white rounded-xl shadow p-6 mb-6">
    <h3 class="text-lg font-semibold text-purple-700 mb-4">Job Notifications</h3>
    <div class="space-y-3">
        {
            jobs && jobs.length > 0 ? jobs.map((job: any) => (
                <JobItem job={job} />
            )): (<NoDataFound />)
        }
    </div>
</section>