---
import { Story } from '@/utils/Story'
export interface Props {
    careers: Story[]
}
const { careers } = Astro.props
---

<div class="grid md:grid-cols-3 gap-4">
    {
        careers.map(career => (
            <div class="bg-white p-6 rounded-xl shadow hover:bg-purple-50 transition cursor-pointer">
                <h3 class="font-semibold text-purple-700 mb-2">{career.title}</h3>
                <p class="text-gray-700 text-sm">{career.description}</p>
            </div>
        ))
    }
</div>
