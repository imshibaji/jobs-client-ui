---
import { Story } from '@/utils/Story'

export interface Props {
    growth: Story[]
}
const { growth } = Astro.props
---
<div class="grid md:grid-cols-3 gap-4">
    {
        growth.map(story => (
            <div class="bg-purple-50 p-6 rounded-xl shadow hover:bg-purple-100 transition cursor-pointer">
                <h3 class="font-semibold text-purple-700 mb-2">{story.title}</h3>
                <p class="text-gray-700 text-sm">{story.description}</p>
            </div>
        ))
    }
</div>