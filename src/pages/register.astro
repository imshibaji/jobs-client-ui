---
import Layout from '../layouts/Base.astro';
import Registration from './_parts/react/Register';
const token = Astro.cookies.get("token")?.value;

const title = "Register - JobsForWomen.com";
---
<Layout title={title}>
    <Registration client:load />

    <input type="hidden" name="token" value={token} />
</Layout>
<script>
    const token = document?.querySelector("input[name='token']")?.value as string;
    if (token) {
        localStorage.setItem("userToken", token);
        window.location.href = "/register-after";
    }
</script>