---
import { User } from "@/utils/types/User";
import { CalendarDaysIcon, Users, BriefcaseBusiness } from "@lucide/astro";


const { users = [] } = Astro.props;


const totalUsers = users.length;
const employers = users.filter((user: User) => user.role === 'employer');
const candidates = users.filter((user: User)=> user.role === 'user');
const editors = users.filter((user: User) => user.role === 'editor');
---

<!-- Stat Cards -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500">Total Users</p>
            <h3 class="text-2xl font-bold text-purple-700">{totalUsers}</h3>
          </div>
          <Users class="w-10 h-10" />
        </div>
      </div>
      <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500">Candidates</p>
            <h3 class="text-2xl font-bold text-purple-700">{candidates.length}</h3>
          </div>
          <BriefcaseBusiness class="w-10 h-10 text-purple-700" />
        </div>
      </div>
      <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500">Employers</p>
            <h3 class="text-2xl font-bold text-purple-700">{employers.length}</h3>
          </div>
          <CalendarDaysIcon class="w-10 h-10 text-purple-700" />
        </div>
      </div>
    </div>