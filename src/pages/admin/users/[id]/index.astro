---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { User } from "@/utils/types/User";
import { useHttpClient } from "@/utils/useHttpClient";
import { APP_URL } from "astro:env/server";

const { id } = Astro.params;
const token = Astro.cookies.get('token')?.value as string;
const backUrl = Astro.url.searchParams.get('backUrl') || '/admin/users';

let user: User | null = null;
try {
    user = await useHttpClient(token).get(APP_URL + `/users/${id}`).then(res => res.json()) as User;
} catch (error) {
    console.error("Failed to fetch user data:", error);
    return Astro.redirect('/admin/users?error=userNotFound');
}

if (!user) {
    return Astro.redirect('/admin/users?error=userNotFound');
}
---

<AdminLayout>
  <!-- Main container -->
  <div class="mt-4 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-violet-700 mb-6 border-b pb-3">User Details</h2>
    
    <!-- Flex Container for Side-by-Side Layout -->
    <div class="flex flex-col lg:flex-row gap-6">
      
      <!-- LEFT COLUMN: User Image Card -->
      <div class="w-full lg:w-1/3">
        <div class="bg-white rounded-xl shadow-xl overflow-hidden sticky top-6">
          <div class="bg-violet-600 h-24"></div> <!-- Decorative header background -->
          <div class="px-6 pb-6 relative">
            <div class="-mt-12 flex justify-center">
                <img 
                    src={user.image ? `${APP_URL}/file/view?filename=${user.image}` : "/logo-pink.jpg"} 
                    alt="User Profile" 
                    class="w-32 h-32 rounded-full border-4 border-white shadow-lg object-cover bg-white" 
                />
            </div>
            <div class="text-center mt-4">
              <h3 class="text-xl font-bold text-gray-800">{user.name}</h3>
              <p class="text-sm text-gray-500">{user.email}</p>
              <span class="inline-block mt-2 px-3 py-1 bg-violet-100 text-violet-800 text-xs font-semibold rounded-full">
                {user.role}
              </span>
            </div>
            
            <div class="mt-6 border-t pt-4">
                <h4 class="text-sm font-semibold text-gray-700 mb-2">Actions</h4>
                <div class="flex flex-col gap-3">
                     <a 
                        href={`/admin/users/${user.id}/edit?backUrl=${encodeURIComponent(backUrl)}`} 
                        class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg text-center transition shadow hover:shadow-md"
                      >
                        Edit User
                      </a>
                      <a 
                        href={`/admin/users/${user.id}/delete?backUrl=${encodeURIComponent(backUrl)}`} 
                        class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg text-center transition shadow hover:shadow-md"
                      >
                        Delete User
                      </a>
                      <a 
                        href={backUrl} 
                        class="w-full bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-lg text-center transition"
                      >
                        Back to List
                      </a>
                </div>
            </div>
          </div>
        </div>
      </div>

      <!-- RIGHT COLUMN: User Details Table -->
      <div class="w-full lg:w-2/3">
        <div class="bg-white rounded-xl shadow-xl overflow-hidden">
          <div class="px-6 py-4 bg-violet-300 border-b border-violet-100">
            <h3 class="text-lg font-semibold text-violet-800">Profile Information</h3>
          </div>
          
          <table class="min-w-full text-left table-auto">
            <tbody class="divide-y divide-gray-200">
              <!-- Name -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500 w-1/3">Name</th>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900">{user.name}</td>
              </tr>
              <!-- Email -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Email</th>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900">{user.email}</td>
              </tr>
              <!-- Phone -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Phone Number</th>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900">{user.phoneNumber || '-'}</td>
              </tr>
               <!-- Password (Masked for security visuals) -->
               <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Password</th>
                <td class="px-6 py-4 text-sm font-mono text-gray-500">••••••••••••</td>
              </tr>
              <!-- Role -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Role</th>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900 capitalize">{user.role}</td>
              </tr>
              <!-- Status -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Status</th>
                <td class="px-6 py-4 text-sm font-semibold text-gray-900">
                    <span class={`px-2 py-1 rounded text-xs ${user.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}`}>
                        {user.status || 'Unknown'}
                    </span>
                </td>
              </tr>
              
              <!-- Social Media Section Header -->
              <tr class="bg-gray-50">
                <td colspan="2" class="px-6 py-2 text-xs font-bold text-gray-500 uppercase tracking-wider">Social Media Links</td>
              </tr>

              <!-- Instagram -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Instagram ID</th>
                <td class="px-6 py-4 text-sm text-gray-900">{user.instagramId || '-'}</td>
              </tr>
              <!-- Facebook -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Facebook ID</th>
                <td class="px-6 py-4 text-sm text-gray-900">{user.facebookId || '-'}</td>
              </tr>
              <!-- Twitter/X -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Twitter/X ID</th>
                <td class="px-6 py-4 text-sm text-gray-900">{user.twitterId || '-'}</td>
              </tr>
              <!-- LinkedIn -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">LinkedIn ID</th>
                <td class="px-6 py-4 text-sm text-gray-900">{user.linkedinId || '-'}</td>
              </tr>
              <!-- Github -->
              <tr>
                <th class="px-6 py-4 text-sm font-medium text-gray-500">Github ID</th>
                <td class="px-6 py-4 text-sm text-gray-900">{user.githubId || '-'}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
    </div>
  </div>
</AdminLayout>