---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { Applicant } from "@/utils/types/Applicant";
import { Application, Company, Job } from "@/utils/types/Company";
import { useHttpClient } from "@/utils/useHttpClient";
import { BASE_URL } from "astro:env/client";
const { id } = Astro.params;
const token = Astro.cookies.get('token')?.value as string;

const application = await useHttpClient(token).get(`${BASE_URL}/applications/${id}`).then(res => res.json()) as Application;
const applicant = await useHttpClient(token).get(`${BASE_URL}/applicants/${application.applicantId}`).then(res => res.json()) as Applicant;
const job = await useHttpClient(token).get(`${BASE_URL}/jobs/${application.jobId}`).then(res => res.json()) as Job;
const company = await useHttpClient(token).get(`${BASE_URL}/companies/${job.companyId}`).then(res => res.json()) as Company;


if(Astro.request.method === 'POST') {
    try {
        // Perform the deletion using the token and user ID
        await useHttpClient(token).delete(`${BASE_URL}/applications/${id}`);
        
        // Redirect the user back after successful deletion
        return Astro.redirect('/admin/applications');
    } catch (error) {
        console.error("Failed to delete application:", error);
        // You might want to redirect to an error page or back with a message
        return Astro.redirect('/admin/applications?error=deletionFailed'); 
    }
}
---
<AdminLayout>
    <div class="max-w-3xl w-full mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl p-6 sm:p-8 border-t-8 border-red-600">
            
            <!-- Header and Warning Icon -->
            <div class="flex flex-col items-center text-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-red-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <h1 class="text-red-700 text-3xl font-extrabold">
                    Confirm Deletion
                </h1>
                <p class="text-gray-600 mt-2 text-lg">
                    Are you absolutely sure you want to delete this application? This action cannot be undone.
                </p>
            </div>
            
            <hr class="border-gray-200 my-6" />

            <!-- Application Summary Block -->
            <div class="p-4 bg-red-50 rounded-xl border border-red-200 space-y-4">
                <h2 class="text-xl font-bold text-red-800 border-b border-red-200 pb-2">Application Details to be Deleted</h2>
                
                <div class="grid grid-cols-2 gap-4">
                    <!-- Applicant Name -->
                    <div>
                        <p class="data-label">Applicant Name</p>
                        <p class="data-value">{applicant && applicant.name}</p>
                    </div>
                    
                    <!-- Job Title -->
                    <div>
                        <p class="data-label">Applied for Job</p>
                        <p class="data-value">{job && job.title}</p>
                    </div>
                    
                    <!-- Status -->
                    <div class="col-span-2">
                        <p class="data-label">Current Status</p>
                        <span class="inline-flex items-center px-3 py-1 rounded-full font-semibold bg-yellow-100 text-yellow-800 shadow-sm">
                            {application.status}
                        </span>
                    </div>
                    
                    <!-- Cover Letter Snippet -->
                    <div class="col-span-2">
                        <p class="data-label">Cover Letter Summary</p>
                        <p class="text-gray-700 italic">"{application.coverLetter}"</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 flex justify-between gap-4">
                
                <!-- Cancel Button (Safe Action) -->
                <a href={`/admin/applications/${id}`} class="w-1/2 text-center bg-gray-200 text-gray-700 font-bold py-3 px-4 rounded-xl hover:bg-gray-300 transition duration-150">
                    Cancel and Keep
                </a>
                
                <!-- Delete Button (Destructive Action) -->
                <form action={`/admin/applications/${id}/delete`} method="POST" class="w-1/2">
                    <button type="submit" class="flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-xl transition duration-150 w-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-2 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Yes, Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</AdminLayout>