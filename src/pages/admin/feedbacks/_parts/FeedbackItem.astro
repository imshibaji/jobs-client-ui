---
import { Feedback } from '@/utils/types/Feedback';

interface Props {
    feedback: Feedback;
}
const { feedback } = Astro.props;
---
<div class="flex flex-col md:flex-row w-full p-4 border border-purple-100 rounded-lg bg-purple-50 transition duration-200 ease-out hover:shadow-md">
    <div class="flex flex-col flex-1 mb-3 md:mb-0">
        <p class="font-medium text-purple-800">{feedback.comment || 'No comment'}</p>
        <p class="text-gray-600 text-sm">Feedback by {feedback.name || 'Anonymous'}</p>
    </div>
    <div class="flex flex-col mr-4 pl-4 border-t-2 md:border-t-0 md:border-l-2 border-purple-600">
        <div class="w-full text-center mb-3 md:mb-0">
            <p class="font-medium text-purple-80">Rating</p>
            <p class="text-green-600 font-bold text-sm">{feedback.rating || 0}/5</p>
        </div> 
    </div>
    <div class="flex md:ml-auto justify-center items-center border-t-2 md:border-t-0 md:border-l-2 border-purple-600 pl-2">
        <a href=`/admin/feedbacks/${feedback.id}/edit` class="text-purple-600 hover:text-purple-900 focus:ring-2 focus:outline-none focus:ring-purple-300 font-bold rounded-lg text-sm px-5 py-1.5 text-center ml-2">Edit</a>
        <a href=`/admin/feedbacks/${feedback.id}/delete` class="text-purple-600 hover:text-purple-900 focus:ring-2 focus:outline-none focus:ring-purple-300 font-bold rounded-lg text-sm px-5 py-1.5 text-center">Delete</a>
    </div>
</div>