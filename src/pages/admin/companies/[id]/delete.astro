---
import AdminLayout from "@/layouts/AdminLayout.astro";
import DeleteForm from "../_parts/Delete";
// Assume the company data is passed as a prop
const { id } = Astro.params;
const token = Astro.cookies.get('token')?.value as string;
---
<AdminLayout>
    <h1 class="text-2xl font-bold">Delete Company</h1>
    <p>Are you sure you want to delete this company?</p>
    <DeleteForm token={token} companyId={id} client:load/>
</AdminLayout>