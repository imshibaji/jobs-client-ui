---
import { Company } from '@/utils/types/Company';
import { BASE_URL } from 'astro:env/client';

export interface Props {
    company: Company
}
const { company } = Astro.props
---
<div class="max-w-7xl mx-auto">
        <!-- Data Display Card -->
        <div class="bg-white shadow-2xl rounded-2xl p-6 sm:p-10 border-t-8 border-violet-600">

            <!-- Header and Back Button -->
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-10 pb-4 border-b border-gray-100">
                <h2 class="text-4xl font-extrabold text-gray-900 tracking-tight flex items-center gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-violet-600" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zm0 14a2 2 0 110-4 2 2 0 010 4z" />
                    </svg>
                    Company Profile Details
                </h2>
                <a href="/admin/companies" class="mt-3 sm:mt-0 bg-gray-200 text-gray-700 px-5 py-2 rounded-xl text-sm font-semibold hover:bg-gray-300 transition duration-200">
                    &larr; Back to List
                </a>
            </div>

            <p class="text-gray-600 mb-8">A comprehensive overview of the company's registration and contact information.</p>

            <div class="space-y-12">
                
                <!-- SECTION 1: GENERAL DETAILS & LOGO -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 items-start p-6 bg-violet-50/30 rounded-xl border border-violet-100">
                    
                    <!-- LOGO DISPLAY (First Column) -->
                    <div class="md:col-span-1 flex flex-col items-center justify-start p-4">
                        <h3 class="text-lg font-bold text-violet-600 mb-4 tracking-wider">Company Logo</h3>
                        
                        <div class="relative block">
                            <img id="logo-display" class="w-36 h-36 object-cover rounded-full border-4 border-white ring-4 ring-violet-400 shadow-xl" 
                                src={company.image ? `${BASE_URL}/file/view?filename=${company.image}` : "/logo-pink.jpg"}    
                                alt={company.name}
                            />
                        </div>

                        <div class="mt-4 text-center">
                            <p class="text-xl font-extrabold text-gray-900" id="display-name">TechNova Solutions</p>
                            <p class="text-sm text-gray-600 mt-1">Managed by User ID: <span id="display-userId" class="font-bold">{company.userId}</span></p>
                        </div>
                    </div>

                    <!-- General Details Display (Two Columns) -->
                    <div class="md:col-span-2 space-y-6">
                        <h3 class="text-2xl font-bold text-gray-800 border-b pb-2 mb-4">Core Information</h3>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            
                            <div class="detail-item">
                                <p>Company Name</p>
                                <div id="display-name-2" class="value">{company.name || "Not Available"}</div>
                            </div>
                            
                            <div class="detail-item">
                                <p>Industry Type</p>
                                <div id="display-industryType" class="value">{company.industryType || "Not Available"}</div>
                            </div>

                            <div class="detail-item">
                                <p>Primary Recruiter Name</p>
                                <div id="display-recruiterName" class="value">{company.recruiterName || "Not Available"}</div>
                            </div>

                            <div class="detail-item">
                                <p>Company Website</p>
                                <a id="display-website" href={company.website || "#"} target="_blank" class="value">{company.website || "Not Available"}</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- SECTION 2: CONTACT INFORMATION -->
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-gray-800 border-b-2 border-violet-100 pb-3 mb-6">Contact Information</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Phone & Email -->
                        <div class="detail-item">
                            <p>Phone Number</p>
                            <div id="display-phone" class="value">{company.phoneNumber || "Not Available"}</div>
                        </div>
                        
                        <div class="detail-item">
                            <p>Contact Email</p>
                            <a id="display-email" href={`mailto:${company.email || "#"}`} class="value">{company.email || "Not Available"}</a>
                        </div>
                        
                        <!-- Location Fields -->
                        <div class="detail-item">
                            <p>Zip Code</p>
                            <div id="display-zipCode" class="value">{company.zipCode || "Not Available"}</div>
                        </div>
                    </div>
                </div>

                <!-- SECTION 3: LOCATION DETAILS -->
                <div class="space-y-6">
                    <h3 class="text-2xl font-bold text-gray-800 border-b-2 border-violet-100 pb-3 mb-6">Location Details</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        
                        <div class="md:col-span-4 detail-item">
                            <p>Street Address</p>
                            <div id="display-address" class="value">{company.address || "Not Available"}</div>
                        </div>
                        
                        <div class="detail-item">
                            <p>City</p>
                            <div id="display-city" class="value">{company.city || "Not Available"}</div>
                        </div>
                        
                        <div class="detail-item">
                            <p>State / Province</p>
                            <div id="display-state" class="value">{company.state || "Not Available"}</div>
                        </div>

                        <div class="detail-item">
                            <p>Country</p>
                            <div id="display-country" class="value">{company.country || "Not Available"}</div>
                        </div>
                    </div>
                </div>

                <!-- ACTION FOOTER -->
                <div class="action-footer flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                    
                    <!-- Edit Button -->
                    <a href=`/admin/companies/${company.id}/edit` class="flex justify-center items-center bg-violet-600 text-white font-bold text-lg py-3 rounded-xl hover:bg-violet-700 transition duration-200 shadow-xl shadow-violet-200/50 focus:outline-none focus:ring-4 focus:ring-violet-500 focus:ring-opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-3.111 10.822l-4.58 4.58c-.39.39-1.023.39-1.414 0l-1.414-1.414c-.39-.39-.39-1.023 0-1.414l4.58-4.58 2.828 2.828z" />
                        </svg>
                        Edit Company Details
                    </a>

                    <!-- Delete Button -->
                    <a href=`/admin/companies/${company.id}/delete` class="flex justify-center items-center bg-red-500 text-white font-semibold py-3 px-6 rounded-xl hover:bg-red-600 transition duration-200 shadow-lg focus:outline-none focus:ring-4 focus:ring-red-500 focus:ring-opacity-50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm4 0a1 1 0 10-2 0v6a1 1 0 102 0V8z" clip-rule="evenodd" />
                        </svg>
                        Delete Company
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<style is:inline>
    /* Custom styles for detail card structure */
    .detail-item p {
        font-size: 0.875rem; /* sm */
        line-height: 1.25rem;
        color: #4b5563; /* gray-600 */
        font-weight: 600; /* semibold */
        margin-bottom: 0.25rem;
    }
    .detail-item .value {
        font-size: 1rem; /* base */
        line-height: 1.5rem;
        color: #111827; /* gray-900 */
        font-weight: 700; /* bold */
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e5e7eb; /* gray-200 */
    }
    .detail-item a.value {
        color: #7f22fe; /* violet-600 */
        text-decoration: underline;
    }

    /* Style for the action footer to space items evenly */
    .action-footer > * {
        flex-grow: 1;
    }
    /* Set default font to Inter */
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f7fa; /* Light background for the whole page */
    }
</style>