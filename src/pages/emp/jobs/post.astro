---
import EmployeeLayout from "@/layouts/EmpLayout.astro";
import SaveForm from "./_parts/SaveForm";
import RichCard from "@/components/RichCard.astro";
const { user, token } = Astro.locals as any;
---
<EmployeeLayout>
  <RichCard title="Post New Job" action={{ label: "Back to Job List", url: "/emp/jobs" }}>
    <SaveForm token={token} user={user} client:load />
  </RichCard>
</EmployeeLayout>