---
import { Company, Job } from '@/utils/types/Company';

export interface Props {
    job: Job & { company: Company };
}
const { job } = Astro.props;
---
<div class="flex flex-col md:flex-row w-full p-4 border border-purple-100 rounded-lg bg-purple-50 transition duration-200 ease-out hover:shadow-md">
    <div class="flex flex-col flex-1 mb-3 md:mb-0">
        <p class="font-medium text-purple-800">{job.title} in {job.location}</p>
        <p class="text-gray-600 text-sm"><b>Job Description:</b> {job.description} at {job.company.name}.</p>
    </div>
    <div class="flex flex-col mr-4 pl-4 border-t-2 md:border-t-0 md:border-l-2 border-purple-600">
        <div class="w-full text-center mb-3 md:mb-0">
            <p class="font-medium text-purple-80">Salary ({job.salaryType})</p>
            <p class="text-green-600 text-sm"><b>{job.salary} {job.currency || 'INR'}</b></p>
        </div> 
    </div>
    <div class="flex md:ml-auto justify-center items-center border-t-2 md:border-t-0 md:border-l-2 border-purple-600 pl-2">
        <a href={`/emp/jobs/${job.id}`} class="text-purple-600 hover:text-purple-900 focus:ring-2 focus:outline-none focus:ring-purple-300 font-bold rounded-lg text-sm px-5 py-1.5 text-center">View Details</a>
        <a href={`/emp/jobs/${job.id}/edit`} class="ml-4 text-white bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:outline-none focus:ring-purple-300 font-bold rounded-lg text-sm px-5 py-1.5 text-center">Edit Job</a>
    </div>
</div>