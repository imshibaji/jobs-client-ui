---
import ApplicationItem from "./ApplicationItem.astro";
import { getEmployerData } from "@/pages/emp/_parts/EmployerData";
const { user, token } = Astro.locals as any;
const {applications} = await getEmployerData(token, user);
---

<div class="flex flex-col gap-4">
    { applications ? applications.map((app) => (
        <ApplicationItem application={app} />
    )): 
        <p class="text-gray-500 italic">No applications found. Please add an application.</p> 
    }
</div>