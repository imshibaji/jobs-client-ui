---
import NoDataFound from "@/components/NoDataFound.astro";
import { getEmployerData } from "../../_parts/EmployerData";
import InterviewItem from "./InterviewItem.astro";
const { user, token } = Astro.locals as any;
const {interviews} = await getEmployerData(token, user);
---

<div class="flex flex-col gap-4">
    {
    interviews && interviews.length > 0 ? interviews.map((interview) => (
        <InterviewItem interview={interview} />
    )): 
        <NoDataFound title="No interviews found." />
    }
</div>